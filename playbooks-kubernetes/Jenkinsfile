stage('Docker build and push') {
  steps {
    // Εκτελούμε το docker build από το root, ώστε το context να περιλαμβάνει pom.xml και src/
    sh '''
      docker build \
        -f playbooks-kubernetes/Dockerfile.app \
        -t ghcr.io/karatziask/ds-project:${GIT_COMMIT}-${BUILD_NUMBER} \
        -t ghcr.io/karatziask/ds-project:latest \
        .
      docker push ghcr.io/karatziask/ds-project:${GIT_COMMIT}-${BUILD_NUMBER}
      docker push ghcr.io/karatziask/ds-project:latest
    '''
  }
}

}

}